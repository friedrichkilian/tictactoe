    <Line endX="210" endY="135" startX="190" startY="135" />
    <Label fx:id="opponentScore" alignment="CENTER" layoutX="210" layoutY="85" prefHeight="100" prefWidth="90" text="0">
      <font>
         <Font size="40.0" />
      </font></Label>

