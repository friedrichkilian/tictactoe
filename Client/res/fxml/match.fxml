<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <Text fx:id="opponentField" layoutX="50" layoutY="50" text="Waiting for opponent..." />
