    <Canvas fx:id="field2" height="50" layoutX="225" layoutY="225" onMouseClicked="#clickOnField2" width="50" /> <!-- Field 0|2 -->
    <Canvas fx:id="field3" height="50" layoutX="125" layoutY="275" onMouseClicked="#clickOnField3" width="50" /> <!-- Field 1|0 -->
    <Canvas fx:id="field4" height="50" layoutX="175" layoutY="275" onMouseClicked="#clickOnField4" width="50" /> <!-- Field 1|1 -->
    <Canvas fx:id="field5" height="50" layoutX="225" layoutY="275" onMouseClicked="#clickOnField5" width="50" /> <!-- Field 1|2 -->
    <Canvas fx:id="field6" height="50" layoutX="125" layoutY="325" onMouseClicked="#clickOnField6" width="50" /> <!-- Field 2|0 -->
    <Canvas fx:id="field7" height="50" layoutX="175" layoutY="325" onMouseClicked="#clickOnField7" width="50" /> <!-- Field 2|1 -->
    <Canvas fx:id="field8" height="50" layoutX="225" layoutY="325" onMouseClicked="#clickOnField8" width="50" /> <!-- Field 2|2 -->

    <Line endX="275" endY="275" startX="125" startY="275" />
    <Line endX="275" endY="325" startX="125" startY="325" />
    <Line endX="175" endY="375" startX="175" startY="225" />
    <Line endX="225" endY="375" startX="225" startY="225" />

    <Text fx:id="turnField" text="It's your turn!" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50" />
    <Button focusTraversable="false" onAction="#leave" text="Leave" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="50.0" />

</AnchorPane>
